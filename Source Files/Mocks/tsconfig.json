{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./hdr-canvas/assets/ts/@types"
    ],
    "target": "es2017",
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": ["hdr-canvas/assets/**/*", "common-assets/ts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
